<%# Top Page View %>
<div class = "container p-3">

  <span class = "site_title">
    HOW T<i class="fa-solid fa-heart-pulse" style="color: red;"></i> BEAT
  </span>

  <div class = "row">
    <%= render partial: "temp/sidebar", locals: {post_obj: @new_arrivals_posts, comment_obj: @new_arrivals_comments} %>

    <div class = "col-md-9">
      <h1>Let's Beat the Game!</h1>

      <div class="row">
        <% @new_arrivals_posts.each do |new_p| %>
          <div class = "col-md-6">
            <div class = "card border border-1 mx-auto mt-4" style = "height: auto;">
              <div class = "card-body py-0">
                <%= link_to post_path(new_p.id) do %>
                  <%= image_tag new_p.get_post_image(300, 100), class: "card-img-top" %>
                <% end %>
                <h5 class = "card-title"><%= new_p.title %></h5>
                <h6 class = "card-subtitle mb-2 text-body-secondary"><%= l new_p.updated_at, format: :long %></h6>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
